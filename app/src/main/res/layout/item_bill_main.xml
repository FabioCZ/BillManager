<?xml version="1.0" encoding="utf-8"?>
<layout     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="bill"
            type="com.gottlicher.billmanager.model.Bill"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <TextView
            android:id="@+id/billName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/billIcon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@{bill.name}" />

        <TextView
            android:id="@+id/billDueLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/due"
            app:layout_constraintStart_toEndOf="@+id/billIcon"
            app:layout_constraintTop_toBottomOf="@+id/billName" />

        <TextView
            android:id="@+id/billDueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/billDueLabel"
            app:layout_constraintTop_toBottomOf="@+id/billName"
            tools:text="@{bill.getNextDueDateString()}" />

        <ImageButton
            android:id="@+id/billCheckBtn"
            android:layout_width="@dimen/icon_size_large"
            android:layout_height="@dimen/icon_size_large"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:tint="@{bill.isPaidThisMonth ? @android:color/holo_green_dark : @android:color/holo_orange_light}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_check_circle_black_24dp" />

        <ImageView
            android:id="@+id/billIcon"
            android:layout_width="@dimen/icon_size_large"
            android:layout_height="@dimen/icon_size_large"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:tint="@android:color/darker_gray"
            app:srcCompat="@drawable/ic_assignment_black_24dp" />
    </android.support.constraint.ConstraintLayout>
</layout>